<?xml version="1.0" encoding="UTF-8"?>
<interface domain="org.gnome.shell.extensions.auto-power-profile">
    <template class="AutoPowerProfileGeneralPrefs" parent="AdwPreferencesPage">
        <property name="name">general</property>
        <property name="title" translatable="yes">General</property>
        <property name="icon-name">power-profile-balanced-rtl-symbolic</property>
        <child>
            <object class="AdwPreferencesGroup" id="ui_group">
                <property name="title" translatable="yes">Perfis de Energia</property>
                <property name="description" translatable="yes">Aplicado automaticamente, exceto se o usuário escolher outro perfil manualmente</property>

                <child>
                    <object class="AdwComboRow" id="ac_profile">
                        <property name="title" translatable="yes">Energia</property>
                        <property name="subtitle" translatable="yes">Selecione o perfil para quando conectado à energia</property>
                        <property name="model">platform_profile_model</property>
                    </object>
                </child>

                <child>
                    <object class="AdwActionRow" id="row_lap_mode">
                        <property name="title" translatable="yes">Modo 'colo' quando conectado à energia</property>
                        <property name="subtitle" translatable="yes">Tenta manter no perfil de desempenho em superfícies instáveis. Desabilite se houver super-aquecimento</property>
                        <property name="activatable-widget">lap_mode</property>
                        <property name="visible">False</property>
                        <child>
                            <object class="GtkSwitch" id="lap_mode">
                                <property name="valign">center</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="AdwComboRow" id="bat_profile">
                        <property name="title" translatable="yes">Bateria</property>
                        <property name="subtitle" translatable="yes">Selecione o perfil para quando estiver somente na bateria</property>
                        <property name="model">platform_profile_model</property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="AdwPreferencesGroup">
                <child>
                    <object class="AdwSpinRow" id="threshold">
                        <property name="title" translatable="yes">Limite para economia de energia</property>
                        <property name="subtitle" translatable="yes">Trocar para o perfil de economia de energia quando o nível da bateria ficar abaixo de</property>
                        <property name="adjustment">threshold_adjustment</property>
                        <property name="numeric">True</property>
                        <property name="snap-to-ticks">True</property>
                        <property name="update-policy">if-valid</property>
                    </object>
                </child>
            </object>
        </child>

        <child>
            <object class="AdwPreferencesGroup">
                <property name="title" translatable="yes">Otimizações de Bateria</property>
                <property name="description" translatable="yes">Recursos adicionais de economia de energia ao usar a bateria</property>
                <child>
                    <object class="AdwSwitchRow" id="disable_animations_on_battery">
                        <property name="title" translatable="yes">Desabilitar animações na bateria</property>
                        <property name="subtitle" translatable="yes">Desabilita automaticamente as animações do GNOME ao usar a bateria para economizar energia. As animações são restauradas ao conectar à energia.</property>
                    </object>
                </child>
            </object>
        </child>
    </template>

    <object class="GtkStringList" id="platform_profile_model"></object>

    <object class="GtkAdjustment" id="threshold_adjustment">
        <property name="page-increment">5.0</property>
        <property name="step-increment">1.0</property>
        <property name="upper">99.0</property>
        <property name="lower">0.0</property>
        <property name="value">25.0</property>
    </object>
</interface>
